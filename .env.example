# Required for AI policy assistant responses
OPENAI_API_KEY=

# Optional: override policy assistant model
POLICY_ASSISTANT_MODEL=gpt-4.1-mini

# Optional: embeddings for hybrid retrieval quality (defaults shown)
POLICY_ASSISTANT_EMBEDDING_MODEL=text-embedding-3-small
# Set to 1 to disable embeddings and use lexical retrieval only
POLICY_ASSISTANT_EMBEDDINGS_DISABLED=0

# Optional: state-law retrieval modes
# Set to 0 to disable retrieval from the ingested state-law corpus
POLICY_ASSISTANT_STATE_LAW_CORPUS_ENABLED=1
# Set to 1 to enable live lookup from approved state-law domains
POLICY_ASSISTANT_LIVE_STATE_LAW_ENABLED=0
# Two-letter state code used for state-law retrieval mode
POLICY_ASSISTANT_STATE_CODE=IN
# Comma-separated approved domains used for live state-law mode and ingestion validation.
# Exact match by default; use wildcard prefixes for subdomains (example: *.iga.in.gov,*.in.gov)
POLICY_ASSISTANT_APPROVED_STATE_LAW_DOMAINS=*.iga.in.gov,*.in.gov
# Shared key required for POST /api/policy-assistant/state-law/ingest
POLICY_ASSISTANT_STATE_LAW_INGEST_KEY=
# Optional model override for live state-law web search
POLICY_ASSISTANT_LIVE_LAW_MODEL=gpt-4.1-mini

# Required for policy storage (use a managed Postgres URL in production)
# On Vercel Postgres, POSTGRES_URL is injected automatically.
POLICY_ASSISTANT_DATABASE_URL=

# Required in production for email verification and password reset emails
RESEND_API_KEY=
POLICY_ASSISTANT_FROM_EMAIL="Policy Assistant <noreply@example.com>"
# Required in production for secure verification/reset link generation
POLICY_ASSISTANT_APP_ORIGIN=https://your-domain.example

# Optional: defaults to public IGA route that serves legislative data
IGA_API_BASE=https://iga.in.gov/api

# Optional: defaults to official static host for PDFs
IGA_STATIC_BASE=https://iga.in.gov

# Optional but recommended for PDF requests and traceability
IGA_USER_AGENT=Indiana-Bill-Tracker/1.0 (contact: your-email@example.com)
